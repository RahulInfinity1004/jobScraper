{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "target": "ES2023",
        "skipLibCheck": true,
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "dist",
        "strictNullChecks": false,
        "resolveJsonModule": true
    },
    "include": ["src/**/*"],
}